<Window x:Class="Todo.ItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo"
        mc:Ignorable="d"
        Title="ItemWindow" Height="387" Width="380" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="tbxTitle" HorizontalAlignment="Left" Height="38" Margin="43,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" FontSize="18"/>
        <TextBox x:Name="tbxContent" HorizontalAlignment="Left" Height="202" Margin="43,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280"/>
        <Button x:Name="btnCan" Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="81" Margin="43,297,0,0" Click="btnCan_Click"/>
        <Button x:Name="btnCfm" Content="Confirm" HorizontalAlignment="Left" VerticalAlignment="Top" Width="121" Margin="202,297,0,0" Click="btnCfm_Click"/>

    </Grid>
</Window>
